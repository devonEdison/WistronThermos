<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.wits.wistronthermos"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true"/>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.BLUETOOTH_PRIVILEGED"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.FLASHLIGHT"/>

    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.front"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Thermos"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Holo.Light.NoActionBar">
        <activity
            android:name=".SetupProfile.HelloActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".SetupProfile.SetupProfileActivity"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".SetupProfile.SetupProfileNameActivity"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".SetupProfile.SetupProfilePhotoActivity"
            android:theme="@style/AppTheme"/>
        <activity
            android:name="multipleimageselect.activities.AlbumSelectActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/MultipleImageSelectTheme">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name="multipleimageselect.activities.ImageSelectActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/MultipleImageSelectTheme">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".SetupProfile.SetupProfileEmailActivity"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".SetupProfile.FitbitAuthenticationActivity"
            android:label="@string/title_fitbit_authentication"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".InitSetup.InitSetupActivity"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".SetupProfile.FitbitEnableActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".InitSetup.InitSetupConnectActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".InitSetup.InitSetupNoSmartLidFoundActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".InitSetup.InitSetupConnectSupportActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".InitSetup.InitSetupLegalActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".InitSetup.InitSetupLegalMessageActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".InitSetup.InitSetupPairCompleteActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".Hydration.HydrationActivity">
        </activity>
        <activity android:name=".Hydration.HydrationPolicyActivity">
        </activity>
        <activity android:name=".Hydration.HydrationAgeActivity">
        </activity>
    </application>

</manifest>